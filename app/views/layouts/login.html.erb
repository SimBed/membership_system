<!DOCTYPE html>
<html lang="en">
  <head>
    <title>AttendanceSystem</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
<!--comment-->
    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
    <%= stylesheet_pack_tag 'admin', media: 'all' %>  
    <%= javascript_pack_tag 'admin', media: 'all' %> 
    <%= javascript_pack_tag 'isotope', defer:true %>    

    <script src="https://kit.fontawesome.com/52a30c356b.js" crossorigin="anonymous"></script>

  </head>

  <body>
    <%= render 'layouts/public_navbar_black' %>

    <main id="white-canvas">
      <div class="offcanvas-wrap">
        <section class="overflow-hidden">
            <div id="flash_messages">
              <%= render_flash %>
            </div>        
          <%= yield %>
          <%#= debug(params) if Rails.env.development? %>
          <%= current_account&.ac_type if Rails.env.development? %>
          <%= render 'layouts/footer' %>
        </section>
      </div>
    </main>

  </body>

</html>
