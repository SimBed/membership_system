<!-- reference https://getbootstrap.com/docs/5.0/components/navbar/ and amend as needed-->
<% client = current_account.client %>
<nav class="navbar">
  <ul class="navbar-nav">
    <li class="nav-item">
      <%= link_to client_history_path(client), class: "nav-link active" do %>
        <i class="fa fa-dumbbell"></i>
        <span class="link-text">Package History</span>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to client_book_path(client), class: "nav-link" do %>
        <i class="fa fa-calendar"></i>
        <span class="link-text">Book</span>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to client_client_path(client), class: "nav-link" do %>
        <i class="fa fa-user"></i>
        <span class="link-text">Profile</span>
      <% end %>
    </li>
  </ul>
  <ul class="navbar-nav">
    <li class="nav-item">
      <% if current_account %>
        <%= link_to logout_path, method: :delete, class: "nav-link" do %>
          <i class="fa fa-door-open"></i>
          <span class="link-text">Logout</span>
        <% end %>
      <% else %>
        <%= link_to login_path, class: "nav-link" do %>
          <i class="fa fa-sign-in-alt"></i>
          <span class="link-text">Login</span>
        <% end %>
      <% end %>
    </li>
  </ul>
</nav>
