<h4>Discount Reason <%= link_to image_tag('add.png'), new_superadmin_discount_reason_path %></h4>
<div id="discount_reasons_table" class="container px-1 mb-5 margin-override overflow-auto">
  <table class="table table-secondary table-striped caption-top table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Rationale</th>
        <th>Student</th>
        <th>Friends & Family</th>
        <th>First Package</th>
        <th>Renewal Pre Package Expiry</th>
        <th>Renewal Post Package Expiry</th>
        <th>Renewal Pre Trial Expiry</th>
        <th>Renewal Post Trial Expiry</th>
        <th colspan="3"></th>
      </tr>

    </thead>
      <tbody>
      <% @discount_reasons.each do |d| %>
        <tr>
          <td><%= d.name %></td>
          <td><%= d.rationale %></td>
          <td><%= d.student? ? raw("&check;") : "-" %></td>
          <td><%= d.friends_and_family? ? raw("&check;") : "-" %></td>
          <td><%= d.first_package? ? raw("&check;") : "-" %></td>
          <td><%= d.renewal_pre_package_expiry? ? raw("&check;") : "-" %></td>
          <td><%= d.renewal_post_package_expiry? ? raw("&check;") : "-" %></td>
          <td><%= d.renewal_pre_trial_expiry? ? raw("&check;") : "-" %></td>
          <td><%= d.renewal_post_trial_expiry? ? raw("&check;") : "-" %></td>
          <td><%= link_to image_tag('edit.png', class: "table_icon"), edit_superadmin_discount_reason_path(d) %></td>
          <td><%= link_to image_tag('delete.png', class: "table_icon"), superadmin_discount_reason_path(d), method: :delete, data: { confirm: 'Discount Reason will be deleted. Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
