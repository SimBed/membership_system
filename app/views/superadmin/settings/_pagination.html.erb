<section class="mb-3 settings-scope"
         data-settings-target="settingsScope settingsScopePagination"> 
  <div class="canvas gray100-canvas embossed px-2">              
    <div class="form-group mb-2">
      <label class="control-label">List this many clients per page on the clients index page</label>
      <%= f.number_field :clients_pagination, value: Setting.clients_pagination, class: "form-control number-field" %>
    </div>
    <div class="form-group mb-2">
      <label class="control-label">List this many purchases per page on the purchases index page</label>
      <%= f.number_field :purchases_pagination, value: Setting.purchases_pagination, class: "form-control number-field" %>
    </div>
    <div class="form-group mb-2">
      <label class="control-label">List this many classes per page on the classes index page</label>
      <%= f.number_field :wkclasses_pagination, value: Setting.wkclasses_pagination, class: "form-control number-field" %>
    </div>
  </div>
</section>