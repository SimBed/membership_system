<section class="mb-3 settings-scope"
         data-settings-target="settingsScope settingsScopeClient">
  <div class="canvas gray100-canvas embossed px-2">            
    <div class="form-group mb-2">
      <label class="control-label">If a client hasn't attended for more than this many months, they are considered cold</label>
      <%= f.number_field :cold, value: Setting.cold, class: "form-control number-field" %>
    </div>
    <div class="form-group mb-2">
      <label class="control-label">If a client has attended in the last this many months, they are considered to have recently attended</label>
      <%= f.number_field :recently_attended, value: Setting.recently_attended, class: "form-control number-field" %>
    </div>
  </div>
</section>