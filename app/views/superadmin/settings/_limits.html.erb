<section class="mb-5">   
  <h4 class="fs-5 ms-4 mb-0 fw-bolder text-uppercase">Group Class Limits (Amnsety & Sunset)</h4>
  <div class="form-text alert alert-primary mb-0">
    Be careful. Don't change layout or App will break.
  </div>          
  <div class="card bg-opaque-white">
    <div class="card-body bg-light">               
      
      <div class="form-group mb-2">
        <label class="control-label">Sunset Limits</label>
        <%= f.text_area :sunset_limit_days, value: @sunsets, class: "form-control", style: "height: 10rem;"  %>
      </div>
      
      <div class="form-group">
        <label class="control-label">Amnesty Options</label>
        <%= f.text_area :amnesty_limit, value: @amnesties, class: "form-control", style: "height: 40rem;"  %>
      </div>

    </div>
  </div>
</section>