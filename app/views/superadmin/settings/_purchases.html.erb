<section class="mb-5">   
  <h5 class="fs-5 ms-4 mb-0 fw-bolder text-uppercase">Purchase</h5>
  <div class="card bg-opaque-white">
    <div class="card-body bg-light">               
      
      <div class="form-group mb-2">
        <label class="control-label">Payment methods</label>
        <%= f.text_area :payment_methods, value: Setting.payment_methods.join("\n"), class: "form-control", style: "height: 20rem;" %>
      </div>

      <div class="form-group">
        <label class="control-label">Minimum duration of a freeze</label>
        <%= f.number_field :freeze_min_duration, value: Setting.freeze_min_duration, class: "form-control", style: "width: 5rem;" %>
      </div>      

      <div class="form-group">
        <label class="control-label">Default duration of a freeze</label>
        <%= f.number_field :freeze_duration_days, value: Setting.freeze_duration_days, class: "form-control", style: "width: 5rem;" %>
      </div>      

      <div class="form-group">
        <label class="control-label">Charge for a freeze</label>
        <%= f.number_field :freeze_charge, value: Setting.freeze_charge, class: "form-control", style: "width: 5rem;" %>
      </div>      

      <div class="form-group">
        <label class="control-label">Minimum charge for a restart</label>
        <%= f.number_field :restart_min_charge, value: Setting.restart_min_charge, class: "form-control", style: "width: 5rem;" %>
      </div>      

      <div class="form-group">
        <label class="control-label">Transfer Charge</label>
        <%= f.number_field :transfer_charge, value: Setting.transfer_charge, class: "form-control", style: "width: 5rem;" %>
      </div>      

    </div>
  </div>
</section>