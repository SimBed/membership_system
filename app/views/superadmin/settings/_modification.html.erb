<section class="mb-3 settings-scope"
         data-settings-target="settingsScope settingsScopeModification">
  <div class="canvas gray100-canvas embossed px-2">                
    <div class="form-group">
      <label class="control-label">Minimum duration for a freeze (days)</label>
      <%= f.number_field :freeze_min_duration, value: Setting.freeze_min_duration, class: "form-control number-field" %>
    </div>      
    <div class="form-group">
      <label class="control-label">Default duration days for a freeze (days)</label>
      <%= f.number_field :freeze_duration_days, value: Setting.freeze_duration_days, class: "form-control number-field" %>
    </div>      
    <div class="form-group">
      <label class="control-label">Charge for a freeze (Rs.)</label>
      <%= f.number_field :freeze_charge, value: Setting.freeze_charge, class: "form-control number-field" %>
    </div>      
    <div class="form-group">
      <label class="control-label">Minimum charge for a restart (Rs.)</label>
      <%= f.number_field :restart_min_charge, value: Setting.restart_min_charge, class: "form-control number-field" %>
    </div>      
    <div class="form-group">
      <label class="control-label">Transfer Charge (Rs.)</label>
      <%= f.number_field :transfer_fixed_charge, value: Setting.transfer_fixed_charge, class: "form-control number-field" %>
    </div>
  </div>
</section>