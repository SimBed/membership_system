<%= form_with(url: add_client_announcements_path(@announcement), method: "get") do |form| %>
  <label class="text-uppercase">Additional Recipient:</label>
  <%= form.select :client_id, options_for_select(@addable_clients.map {|c| [c.name, c.id]}), {}, { class: "sort" } %>
  <div class="d-inline image_actions">
    <%= form.submit 'add' %>
  </div>
<% end %>