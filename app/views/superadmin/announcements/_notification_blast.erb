<div class="admin_form mb-3" data-controller="notification" data-notification-toggle-class="disabled" data-notification-recipient-number-value=<%= @recipients.size %>> 
  <%= label_tag nil, class: "" do %>
    <%= check_box_tag 'notification_ready', 'no', false,  data: {"action": "notification#toggle_blast_ready"} %>
    <span class='span1'>The notification message has been reviewed. The recipient list has been double-checked.</span>
  <% end %>
  <%#= NOTE: confirmation message will not be triggered when turbo set to false. Solution with stimulus https://discuss.hotwired.dev/t/disable-turbo-but-retain-confirmation-popup-for-link-in-turbo-frame/5697/2%>
  <%= link_to "notify all #{@recipient_list_size}", blast_off_announcements_path(@announcement), class:'btn btn-dark mt-2 disabled',
              data: { "action": "click->notification#confirm",
                      "turbo": false,
                      "notification-target": "blastButton" } %>
</div>