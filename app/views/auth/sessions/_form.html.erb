<%= form_with(scope: :session, url: login_path, data: {turbo: false}) do |form| %>

  <div class="field mb-2">
    <%= form.label :email %>
    <%= form.email_field :email, class: 'form-control' %>
  </div>

  <div class="field mb-2">
    <%= form.label :password do %>
      Password
      <%= link_to "(i don't know my password)", new_client_password_reset_path, class: "forgot-password" %>
      <%= form.password_field :password, class: 'form-control' %>
    <% end %>
  </div>

  <% if false %>
  <div class="field mb-2">
    <%= form.label :remember_me, class: "checkbox inline mb-2" do %>
      <%= form.check_box :remember_me %>
      <span>Remember me on this computer</span>
    <% end %>
  </div>
  <% end %>

  <div class="actions">
    <%= form.submit "Log in", class: "btn btn-black" %>
  </div>
<% end %>


