<% client = @account_holder %>
<% if client.account.nil? %>
  <%= link_to image_tag('add.png', class: "table_icon"), accounts_path(email: client.email, id: client.id, role_name: 'client'), data: { turbo_method: :post, confirm: 'An account for this client will be created. Are you sure?' }  %>
<% else %>
  <%= link_to image_tag('forgot-password.png', class: "table_icon"), account_path(@account, requested_by: 'admin'), data: { turbo_method: :patch, confirm: "This client's password will be reset. Are you sure?" } %>
<% end %>