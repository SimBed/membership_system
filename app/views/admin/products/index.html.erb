<div class="container px-1 mb-1">
  <h4>Products
    <% if @admin_plus %>
      <%= link_to image_tag('add.png', class: "button_icon"),
                  new_product_path,
                  data: { turbo_frame: dom_id(Product.new) } %>
    <% end %>
  </h4>
  <%= turbo_frame_tag Product.new %>   
</div>
<%= turbo_frame_tag 'products-and-filter' do %>
  <%= render partial: 'filter_form' %>
  <% if logged_in_as?('superadmin') %>
    <%= render partial: 'download' %>
  <% end %>
  <%= turbo_frame_tag 'products' do %>  
    <%= render partial: 'products_table' %>
    <%#= render partial: 'products_table', locals: {products: @products_not_current} %>
  <% end %>
<% end %>
