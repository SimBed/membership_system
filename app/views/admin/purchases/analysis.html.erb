<div>
  <h4 class='text-center'>Purchase Analysis</h4>
  <div class="mb-5">
    <%= line_chart charts_purchase_count_by_week_path, ytitle: "Count" %>
    <%= line_chart charts_purchase_charge_by_week_path, ytitle: "Payment (Rs)", thousands: "," %>
  </div>
  <div class='mb-4'>
    <h5 class='text-center'>Count by Workout Group</h5>
    <div class='d-flex flex-column flex-sm-row justify-content-center'>
      <%= render partial: 'donut_purchase_count_by_wg', collection: @purchase_years, as: :year %>
    </div>
  </div>
  <div>
    <h5 class='text-center'>Charge by Workout Group</h5>
    <div class='d-flex flex-column flex-sm-row justify-content-center'>    
      <%= render partial: 'donut_charge_by_wg', collection: @purchase_years, as: :year %>
    </div>
  </div>
</div>
<hr class='mb-4'>
<div>
  <h4 class='text-center'>Product Analysis</h4>
  <div class='mb-4'>
    <h5 class='text-center'>Count by Group Product (top <%= @product_display_limit %>)</h5>
    <div class='d-flex flex-column flex-sm-row justify-content-center'>
      <%= render partial: 'donut_group_product_count', collection: @purchase_years, as: :year %>
    </div>
  </div>
  <div class='mb-4'>
    <h5 class='text-center'>Count by PT Product (top <%= @product_display_limit %>)</h5>
    <div class='d-flex flex-column flex-sm-row justify-content-center'>
      <%= render partial: 'donut_pt_product_count', collection: @purchase_years, as: :year %>
    </div>
  </div>
</div>
