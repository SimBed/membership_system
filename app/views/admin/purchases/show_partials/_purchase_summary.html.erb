<div class="fst-italic ps-2">    
  <%= link_to @purchase.name(rider_show: true), admin_purchase_path(@purchase), class: "like_button" if setting == 'admin_client_show' %>
  <%= 'Summary' if setting == 'admin_purchase_show' %>
</div>
<div class="admin-table striped mt-2 mb-4">
  <div class="row">
    <div class="column col-1x">Payment</div>
    <div class="column col-1x"><%= rupees(@purchase.payment) %></div>
  </div>
  <div class="row">
    <div class="column col-1x">Base Price</div>
    <div class="column col-1x"><%= rupees(@purchase.price.price) %></div>
  </div>
  <% unless @purchase.discounts.empty? %>
    <%= render partial: 'admin/purchases/show_partials/discount', collection: @purchase.discounts %>
  <% end %>  
  <div class="row">
    <div class="column col-1x">Paid on</div>
    <div class="column col-1x"><%= @purchase.dop.strftime('%d %b %y') %></div>
  </div>
  <div class="row">
    <div class="column col-1x">Status</div>
    <div class="column col-1x"><%= @purchase.status %></div>
  </div>
  <% unless @purchase.not_started? %>
    <div class="row">
      <div class="column col-1x">Expiry date</div>
      <div class="column col-1x"><%= @purchase.expiry_date&.strftime('%d %b %y') %></div>
    </div>  
  <% end %>  
  <% unless @purchase.expired? %>
    <div class="row">
      <div class="column col-1x">Sunset date</div>
      <div class="column col-1x"><%= @purchase.sunset_date.strftime('%d %b %y') %></div>
    </div>  
  <% end %>  
  <% unless @sunset_hash[:action].nil? %>
    <div class="row">
      <div class="column col-1x">Sunset action</div>
      <div class="column col-1x"><%= link_to (tag.i class: ["bi", @sunset_hash[:image], ("" if  @purchase.expired?)]), expire_purchase_path(@purchase), data: { turbo_method: :patch , turbo_confirm: @sunset_hash[:confirm] } %></div>
    </div>  
  <% end %>  
  <% unless @purchase.not_started? || @purchase.expired? %>
    <div class="row">
      <div class="column col-1x">Bookings left</div>
      <div class="column col-1x"><%= @purchase.attendances_remain(provisional: true) %></div>
    </div>  
    <div class="row">
      <div class="column col-1x">Attendances left</div>
      <div class="column col-1x"><%= @purchase.attendances_remain(provisional: false) %></div>
    </div>  
  <% end %>  
  <% if @purchase.expired? %>
    <div class="row">
      <div class="column col-1x">Expiry cause</div>
      <div class="column col-1x"><%= @purchase.expiry_cause %></div>
    </div>  
    <div class="row">
      <div class="column col-1x">Expiry on</div>
      <div class="column col-1x"><%= @purchase.expired_on&.strftime('%d %b %y') %></div>
    </div>  
  <% end %>  
  <% if @purchase.provisionally_expired? %>
    <div class="row">
      <div class="column col-1x">Will expire on</div>
      <div class="column col-1x"><%= @purchase.will_expire_on&.strftime('%d %b %y') %></div>
    </div>  
  <% end %>  
  <div class="row">
    <div class="column col-1x">Payment mode</div>
    <div class="column col-1x"><%= @purchase.payment_mode %></div>
  </div>  
  <div class="row">
    <div class="column col-1x">Invoice</div>
    <div class="column col-1x"><%= @purchase.invoice %></div>
  </div>  
  <div class="row">
    <div class="column col-1x">Note</div>
    <div class="column col-1x"><%= @purchase.note %></div>
  </div>
  <% if @purchase.adjust_restart %>
    <div class="row">
      <div class="column col-1x">A&R paid</div>
      <div class="column col-1x"><%= rupees(@purchase.ar_payment) %></div>
    </div> 
    <div class="row">
      <div class="column col-1x">A&R paid on</div>
      <div class="column col-1x"><%= @purchase.ar_date.strftime('%d %b %y') %></div>
    </div> 
  <% end %> 
</div>