<% unless @purchase.freezes.count.zero? %>
<% freezes = @purchase.freezes %>
  <table class="table table-secondary table-striped caption-top">
    <caption><%= "#{pluralize(freezes.size, 'Freeze')} (#{pluralize(freezes.map(&:duration).inject(&:+), 'day')})" %></caption>
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col">Start</th>
        <th scope="col">End</th>
        <th scope="col">Days</th>
        <th scope="col">Note</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% freezes.each_with_index do |freeze, index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= freeze.start_date.strftime('%d %b %y') %></td>
          <td><%= freeze.end_date.strftime('%d %b %y') %></td>
          <td><%= "#{pluralize(freeze.duration, 'day')}" %></td>
          <td><%= freeze.note %></td>
          <td><%= link_to image_tag('edit.png', class: "table_icon"), edit_admin_freeze_path(freeze), class: "icon-container", data: { turbo_frame: 'freeze_edit' } %></td>
          <td><%= link_to image_tag('delete.png', class: "table_icon"), admin_freeze_path(freeze), data: { turbo_method: :delete, turbo_confirm: 'Freeze will be deleted Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<%= turbo_frame_tag 'freeze_edit' %> 
