<% penalties = @purchase.penalties %>
<% unless penalties.count.zero? %>
  <div class="fst-italic ps-2"><%= penalties_header(@purchase) %></div>
  <div class="admin-table striped mt-2 mb-4">
    <div class="row thead">
      <div class="column"></div>
      <div class="column col-1x">Class</div>
      <div class="column col-1x">Date</div>
      <div class="column col-1x">Days</div>
      <div class="column col-1x">Reason</div>
    </div>
    <% penalties.each_with_index do |penalty, index| %>  
      <% wkclass_decorator = decorate(penalty.booking.wkclass) %>
      <div class="row">
        <div class="column"><%= index + 1 %></div>
        <div class="column col-1x"><%= wkclass_decorator.name_link_in_purchase_show_tables(@purchase.id) %></div>
        <div class="column col-1x"><%= wkclass_decorator.date %></div>
        <div class="column col-1x"><%= penalty_days(penalty) %></div>
        <div class="column col-1x"><%= penalty.reason %></div>
      </div>
    <% end %>
  </div>
<% end %>