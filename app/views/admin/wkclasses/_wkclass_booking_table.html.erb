  <% view_financials = logged_in_as?('admin', 'superadmin') ? true : false %>
  <div class="admin-table striped mt-2">
    <div class="p-1">Bookings <small><%= "(#{@bookings&.size || 0})" %> </small></div>
    <%= render partial: 'wkclass_atendance', collection: @bookings, as: :booking, locals: {view_financials: view_financials} %>
  </div>
  <% unless @non_atendances_no_amnesty.empty? %>
    <div class="admin-table striped mt-2">
      <div class="p-1">No-amnesties <small><%= "(#{@non_atendances_no_amnesty&.size || 0})" %> </small></div>
      <%= render partial: 'wkclass_atendance', collection: @non_atendances_no_amnesty, as: :booking, locals: {view_financials: view_financials} %>
    </div>
  <% end %>
  <% unless @non_atendances_amnesty.empty? %>  
    <div class="admin-table striped mt-2">
      <div class="p-1">Amnesties <small><%= "(#{@non_atendances_amnesty&.size || 0})" %> </small></div>
      <%= render partial: 'wkclass_atendance', collection: @non_atendances_amnesty, as: :booking, locals: {view_financials: view_financials} %>
    </div>
  <% end %>