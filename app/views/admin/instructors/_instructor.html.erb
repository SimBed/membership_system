<tr>
  <%=content_tag(:th, instructor.name, class: ("fw-light" unless instructor.current?), scope: 'row')%>
  <% if logged_in_as?('superadmin') %>
    <td><%= instructor.wkclasses.size %></td>
  <% end %>            
  <td class="nomobile"><%= instructor.email %></td>
  <td><%= number(instructor.whatsapp, instructor.whatsapp) %></td>        
  <td><%= link_to image_tag('attendances.png', class: ["table_icon",("active-workout" unless instructor.current?)].compact.join(' ')), admin_instructor_path(instructor, current: !instructor.current?), data: {turbo_method: :patch} %></td>        
  <td><%= link_to image_tag('edit.png', class: "table_icon"), edit_admin_instructor_path(instructor), data: {turbo: false} %></td>
  <% if logged_in_as?('superadmin') %>   
    <td>
      <% if instructor.account.nil? %>
        <%= link_to image_tag('add.png', class: "table_icon"), admin_accounts_path(email: instructor.email, id: instructor.id, ac_type: 'instructor'), data: {turbo_method: :post, confirm: 'An account for this instructor will be created. Are you sure?' }  %>
      <%# fix  %>
      <%# else %>
        <%#= link_to image_tag('forgot-password.png', class: "table_icon"), admin_account_path(instructor.account, requested_by: 'admin'), data: { turbo_method: :patch, turbo_confirm: "This instructor's password will be reset. Are you sure?" } %>
      <% end %>
    </td>
  <% end %>   
</tr>

