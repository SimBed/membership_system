<table class="table table-secondary table-striped caption-top">
  <tbody>
    <% @instructors.each do |instructor| %>
      <tr>
        <%=content_tag(:th, instructor.name, class: ("fw-light" unless instructor.current?), scope: 'row')%>
        <td><%= link_to image_tag('attendances.png', class: ["table_icon",("active-workout" unless instructor.current?)].compact.join(' ')), admin_instructor_path(instructor, current: !instructor.current?), method: :patch %></td>        
        <td><%= link_to image_tag('edit.png', class: "table_icon"), edit_admin_instructor_path(instructor) %></td>
        <!--td><%#= link_to image_tag('delete.png', class: "table_icon"), admin_instructor_path(instructor), method: :delete, data: { confirm: 'Instructor and all its workouts will be deleted. Are you sure?' } %></td-->
      </tr>
    <% end %>
  </tbody>
</table>
