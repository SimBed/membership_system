<%= turbo_frame_tag workout do %>
  <div class= "row">
    <%# content_tag(:div, workout.name, class: ["column col-2x",("fw-bolder" if workout.current?)].compact.join(' ')) %>
    <div class="column col-2x"><%= link_to workout.name, workout_path(workout), class: ["like_button", ("fw-bolder" if workout.current?)].compact.join(' '), data: { turbo_frame: dom_id(workout) } %></div>
