<p id="notice"><%= notice %></p>

<h1>Table Days</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Short name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @table_days.each do |table_day| %>
      <tr>
        <td><%= table_day.name %></td>
        <td><%= table_day.short_name %></td>
        <td><%= link_to 'Show', [:admin, table_day] %></td>
        <td><%= link_to 'Edit', edit_admin_table_day_path(table_day) %></td>
        <td><%= link_to 'Destroy', [:admin, table_day], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

