  <div class="col-md-6">
    <h4>Forgot password</h4>
    <%= form_with(model: @account, url: client_password_reset_path(params[:id])) do |f| %>
      <% if @account.errors.any? %>
        <div id="error_explanation">
          <div class="alert alert-danger">
            The form contains <%= pluralize(@account.errors.count, "error") %>.
          </div>
          <ul>
            <% @account.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= hidden_field_tag :email, @account.email %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "Update password", class: "btn btn-black" %>
    <% end %>
  </div>
