<% freezes = @purchase.freezes %>
<% unless freezes.count.zero? %>
  <div class="mt-3 ps-1"><%= "#{pluralize(freezes.size, 'Freeze')} (#{pluralize(freezes.map(&:duration).inject(&:+), 'day')})" %></div>
  <div class="admin-table striped mt-2">
    <div class="row fw-bolder">
      <div class="column"></div>
      <div class="column col-1x">Start</div>
      <div class="column col-1x">End</div>
      <div class="column col-1x">Days</div>
    </div>
    <% freezes.each_with_index do |f, index| %>
      <div class="row">
        <div class="column"><%= index + 1 %></div>
        <div class="column col-1x"><%= f.start_date.strftime('%d %b %y') %></div>
        <div class="column col-1x"><%= f.end_date.strftime('%d %b %y') %></div>
        <div class="column col-1x"><%= "#{pluralize(f.duration, 'day')}" %></div>
      </div>
    <% end %>
  </div>
<% end %>
