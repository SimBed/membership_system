<form action="/orders" method="POST">
      <script
          src="https://checkout.razorpay.com/v1/checkout.js"
          data-key="<%= "#{Rails.configuration.razorpay[:key_id]}" %>"
          data-amount="<%= "#{@renewal[:price].discounted_price}" %>"
          data-name="<%= "The Space" %>"
          data-description="<%= "#{@renewal[:product].formal_name}" %>"
          data-image="/SpaceLogo.png"
          data-prefill.email="<%= "#{current_account.email}" %>"
          data-theme.color="#F37254"
      >
      </script>
      <input type="hidden" value="<%= "#{@renewal[:product].id}" %>" name="product_id">
      <input type="hidden" value="<%= "#{@renewal[:price].id}" %>" name="price_id">
      <input type="hidden" value="<%= "#{current_account.id}" %>" name="account_id">
  </form>
