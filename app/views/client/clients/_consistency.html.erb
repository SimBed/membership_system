<div class="d-flex">
  <h6 class="fw-bolder fst-italic mb-0">
    consistency
  </h6>
  <p class="GeneralText mb-0 ms-auto me-2">
    member since <%= @client.created_at.strftime('%b %Y') %>
  </p>
</div>

<div class="d-flex justify-content-center mb-6">
  <div class="bigcircle me-5">
    <%= @client.lifetime_classes %>
    <div class="user_score">LIFETIME CLASSES</div>
  </div>

  <!--very hacky to get the names on 2 lines (not 1 or 3) -->
  <div class="bigcircle">
    <%= @client.classes_last('week') %><div class="user_score">CLASSES LAST<span class="pl-1">WEEK</span></div>
  </div>
  <div class="bigcircle ms-5">
    <%= @client.classes_last('month') %><div class="user_score">CLASSES LAST<span class="pl-1">MONTH</span></div>
  </div>
</div>
