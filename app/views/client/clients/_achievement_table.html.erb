<div id="achievements-table" class="container px-0 mb-5">
  <table class="table table-secondary table-striped caption-top">
    <thead>
      <tr>
        <th>Date</th>
        <th class="pr-2 pr-md-5">Score</th>
        <th>Challenge</th>
      </tr>
    </thead>

    <tbody>
      <% @achievements.each do |achievement| %>
        <tr>
          <td><%= achievement.date.strftime('%d/%m/%y') %></td>
          <td><%= achievement.score %></td>
          <td><%= link_to achievement.challenge.name, shared_challenge_path(achievement.challenge) %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
