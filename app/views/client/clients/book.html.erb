<% provide(:greeting, "Hi #{@client.first_name}!") %>
<%# provide(:expiry_statement, (@renewal[:trial] ? 'Your Trial has expired' : 'Your Package has expired') ) %>
<%# <% provide(:renewal_statement, renewal_statement(@renewal[:ongoing], @renewal[:trial], @renewal[:valid], @client)) %>
<% provide(:renewal_statement, renewal_statement(@renewal.package_ongoing?, @renewal.from_trial?, @renewal.valid?, @client)) %>
<% provide(:visit_shop_statement, "Visit the #{link_to 'Shop', client_shop_path(@client), class: 'shop_button'} now".html_safe ) %>
<% provide(:renewal_product, @renewal.product&.formal_name ) %>
<% provide(:renewal_price, @renewal.price&.discounted_price.to_s ) %>
<% provide(:base_price, @renewal.base_price&.price.to_s ) %>
<% provide(:classes_heading, ('Classes coming up' if @renewal.package_ongoing?) ) %>

<%= render partial: 'client_greeting' %>
<% if Setting.renew_online && @renewal.alert_to_renew? %>
  <%= render partial: 'renewal' %>
<% end %>
<%#= render partial: 'client_heading', locals: {selection: false} %>
<%= render partial: 'client_no_classes' if @renewal.package_ongoing? && @wkclasses_visible.empty? %>
<%= render partial: 'client_bookings_table' if @renewal.package_ongoing? && !@wkclasses_visible.empty? %>
<!--div id="consistency" class="container px-1 mb-5">
  <%#= render partial: 'consistency' %>
</div-->
<% unless @purchases.empty? %>
  <%= render partial: 'client_packages_table', locals: {detailed: false} %>
<% end %>

<div id="heart_quote" class="container px-1">
  <%= render partial: 'client_heart' %>
  <%#= render partial: 'quotation' %>
</div>
