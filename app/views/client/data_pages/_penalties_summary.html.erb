<% penalties = @purchase.penalties %>
<% unless penalties.count.zero? %>
  <div class="mt-3 ps-1"><%= "#{pluralize(penalties.size, 'Penalty')} (#{pluralize(penalties.map(&:amount).inject(&:+), 'day')})" %></div>
  <div class="admin-table striped mt-2">
    <div class="row fw-bolder">
      <div class="column"></div>
      <div class="column col-1x">Date</div>
      <div class="column col-1x">Days</div>
    </div>
    <% penalties.each_with_index do |pen, index| %>
    <% wkclass_decorator = decorate(pen.booking.wkclass) %>
      <div class="row">
        <div class="column"><%= index + 1 %></div>
        <div class="column col-1x"><%= wkclass_decorator.summary %></div>
        <div class="column col-1x"><%= "#{pluralize(pen.amount, 'day')}" %></div>
      </div>
    <% end %>
  </div>
<% end %>
