<div id="achievements-table" class="container px-0 mb-5">
  <div class="admin-table striped mt-2">
    <div class="row fw-bolder">
      <div class="column col-1x">Date</div>
      <div class="column col-1x">Score</div>
      <div class="column col-1x">Challenge</div>
    </div>
    <% @achievements.each do |achievement| %>
      <div class="row">
        <div class="column col-1x"><%= achievement.date.strftime('%d/%m/%y') %></div>         
        <div class="column col-1x"><%= number_with_delimiter(achievement.score) %></div>         
        <div class="column col-1x"><%= achievement.challenge.name %></div>        
      </div>
    <% end %>
  </div>
</div>


