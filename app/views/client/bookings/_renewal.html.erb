<div id="renewal" class="container px-1 fw-bolder fst-italic my-5 text-center">
  <% renewal_presenter = RenewalPresenter.new(renewal: @renewal) %>
  <% renewable = !@renewal.product.rider? %>
  <div class="d-flex flex-column justify-content-center admin_form">
    <div class="mb-1"><%= renewal_presenter.renewal_statement(renewable) %></div>
    <% if @renewal.valid? && renewable %>
      <div class="mb-2"><%= renewal_presenter.product_name %></div>
      <% if @renewal.offer_online_discount? %>      
        <div class="base-price mb-1"><%= rupees(@renewal.base_price(@renewal.product).price.to_s) %></div>
      <% end %>
      <div class="discount-price mb-3"><%= rupees(@renewal.price(@renewal.product).to_s) %></div>
      <% if Setting.enable_online_payment%>
        <div class="">
          <%= render partial: 'razor_form_renewal' %>
        </div>
      <% end %>
      <div class="mt-3 mb-2">
        <%= link_to 'or visit shop', client_shop_path(@client), class: 'like_button_alt', data: {turbo: false} %>
      </div>
      <% unless Setting.enable_online_payment%>    
        <div class="admin_form mt-3 text-center"><%= I18n.t('razor_pay_glitch_renewal') %></div>
      <% end %>
    <% else %>
      <p class="bolditalics mb-0"><%= visit_shop_statement(@renewal.product.rider?) %></p>
    <% end %>
  </div>    
</div>
<hr class="divider thick">
