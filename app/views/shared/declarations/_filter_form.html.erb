<div id="declarations-filter" class="container px-1 mb-5">
  <div class="container search">
    <%= render partial: 'sort_selection' %>
    <hr class = "search mb-3"></hr>
    <%= form_with(url: filter_declarations_path, method: "get", class: "form-class") do %>
      <div class="field">
        <%= text_field_tag :search_declaration_client_name, nil, class: "form-control-sm mb-2 search", placeholder: "First name searchâ€¦", value: session[:search_declaration_client_name], oninput: "this.form.requestSubmit()" %>
      </div>
      <div class="container mb-1">
        <div class="row">
          <div class="col-6 px-0">
            <fieldset>
              <legend>ATTRIBUTE</legend>
              <%= label_tag nil, class: "chbox-lbl-filters" do %>
                <%= check_box_tag 'has_health_issue', 'has_health_issue', session[:filter_has_health_issue].present? ? true : false, class: "checkbox-class", id: "chbox_has_health_issue", onchange: "this.form.requestSubmit()" %>
                <%= 'has health issue' %>
              <% end %>
            </fieldset>
          </div>

          <div class="container d-flex">
            <%= link_to image_tag('clear_filter.png', class: "button_icon"), clear_filters_declarations_path, {class: "search searchdelete icon-container"} %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <hr class = "search mb-3"></hr>
</div>
