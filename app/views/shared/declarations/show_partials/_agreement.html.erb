  <label for="terms_and_conditions" class='d-inline'>I agree to the Space's Terms & Conditions</label>
  <%= image_tag 'view.png', class: 'table_icon', data: {"bs-toggle":"modal", "bs-target":"#termsModal"} %>
</div>
<div>
  <%= render 'public_pages/home/payment_policy' %>
  <input type="checkbox" id="payment_policy" <%= 'checked' if @declaration.payment_policy? %> disabled=true>
