  <%= render 'public_pages/home/indemnity_modal' %>
  <input type="checkbox" id="indemnity" <%= 'checked' if @declaration.indemnity? %> disabled=true>
  <label for="indemnity" class='d-inline'>I acknowledge that I have carefully read this linked document and fully understand that it represents a release of liability, an express assumption of risk and agreement to indemnity.</label>
  <%= image_tag 'view.png', class: 'table_icon', data: {"bs-toggle":"modal", "bs-target":"#indemnityModal"} %>
</div>