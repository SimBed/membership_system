<%= turbo_frame_tag declaration do %>
  <div class="row">
    <div class="column col-1x fw-light"><%= link_to declaration.client.name, client_path(declaration.client, link_from: 'declarations_index'), class: 'like_button', data: { turbo_frame: dom_id(declaration.client) } %></div>
    <div class="column col-1x fw-light"><%= declaration.created_at.strftime('%d %b %y') %></div>
    <div class="column"><%= link_to image_tag('clipboard.png', class:'table_icon'), client_declaration_path(declaration.client, link_from: 'declarations_index') %></div>
  </div>
<% end %>
<%= turbo_frame_tag declaration.client %>